<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-3.0.xsd
                           http://www.springframework.org/schema/context
	                       http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- <import resource="applicationContext-persistence-hibernate.xml" /> -->
	<import resource="applicationContext-persistence-jpa.xml" />

	<context:annotation-config />
	<context:component-scan base-package="net.alaux.diosmio" />
	<context:property-placeholder location="file:${diosmio-conf-file}" />

	<bean id="appMessages" class="net.alaux.utils.AppMessages">
		<property name="messageSource">
			<!--Injected here to prevent it from being used elsewhere -->
			<bean
				class="org.springframework.context.support.ResourceBundleMessageSource">
				<property name="basename">
					<value>messages/messages</value>
				</property>
			</bean>
		</property>
	</bean>

	<!--<util:properties id="serviceProperties" location="file:${diosmio-conf-file}"/> -->

	<bean id="fileDao" class="net.alaux.diosmio.services.dao.file.impl.SimpleFileDao" />
	<bean id="artifactDao" class="net.alaux.diosmio.services.dao.db.impl.ArtifactDao" />
	<bean id="artifactManager"
		class="net.alaux.diosmio.services.core.impl.SimpleArtifactManager" />
	<bean id="configDao" class="net.alaux.diosmio.services.dao.db.impl.SimpleConfigDao" />

	<!-- this bean must not be lazily initialized if the exporting is to happen -->
	<!--<bean id="exporter" class="org.springframework.jmx.export.MBeanExporter" 
		lazy-init="false"> -->
	<!--<property name="beans"> -->
	<!--<map> -->
	<!--<entry key="net.alaux.diosmio:name=artifactManager" value-ref="artifactManager"/> -->
	<!--<entry key="net.alaux.diosmio:name=configDao" value-ref="configDao"/> -->
	<!--</map> -->
	<!--</property> -->
	<!--</bean> -->

	<bean class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="artifactManager" />
		<property name="service" ref="artifactManager" />
		<property name="serviceInterface"
			value="net.alaux.diosmio.services.core.ArtifactManager" />
		<!-- defaults to 1099 -->
		<property name="registryPort" value="${server.rmi.artifact_manager.port}" />
	</bean>

	<bean class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="configDao" />
		<property name="service" ref="configDao" />
		<property name="serviceInterface" value="net.alaux.diosmio.services.dao.db.ConfigDao" />
		<!-- defaults to 1099 -->
		<property name="registryPort" value="${server.rmi.config_dao.port}" />
	</bean>

</beans>

