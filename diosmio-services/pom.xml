		<!-- <version>4.1.4.Final</version> -->
		<!-- </dependency> -->

		<!-- OpenJPA ********************************* -->
		<dependency>
			<groupId>org.apache.openjpa</groupId>
			<artifactId>openjpa</artifactId>
			<version>${openjpa.version}</version>
		</dependency>

		<!-- <dependency> -->
		<!-- <groupId>com.googlecode.json-simple</groupId> -->
